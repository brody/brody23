---
import Layout from './Layout.astro';

export interface Props {
  title: string;
}
const { title } = Astro.props;
import { Icon } from 'astro-icon';
---

<Layout title={title}>
  <div class='breadcrumbs not-prose mt-4'>
    <a href='/'> <span class='font-heading h-lig mr-1.5 -mt-0.5'>:-)</span>Brody.com</a>
    <a href='#'><Icon pack='tabler' name='world' class='' />Wiki</a>
    <a href='#'><Icon pack='tabler' name='device-desktop-analytics' class='' />Uses</a>
    <a href='#'><Icon pack='tabler' name='calendar-event' class='' />Now</a>
  </div>
  <h1 class='mb-3'>{title}</h1>
  <slot />
</Layout>
