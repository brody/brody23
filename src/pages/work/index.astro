---
import { SITE } from "@config";
import Work from "@layouts/Work.astro";
import getSortedWork from "@utils/getSortedWork";
import getPageNumbers from "@utils/getPageNumbers";

import { getCollection } from "astro:content";

const items = await getCollection("work");

const sortedPosts = getSortedWork(items);

const totalPages = getPageNumbers(sortedPosts.length);

const paginatedPosts = sortedPosts.slice(0, SITE.postPerPage);
---

<Work items={paginatedPosts} pageNum={1} totalPages={totalPages.length} />
